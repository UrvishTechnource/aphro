<script>
   //your js code here  
     function add1(id){
       var val1=document.getElementById(id).value;
       if(val1==''){
         var final_val=0;
       }else{
         var final_val=document.getElementById(id).value;
       }
       var tadd=parseInt(final_val)-1;
       if(tadd<1){
         tadd=1;
       }
       document.getElementById(id).value=tadd;
     }
     
     function rem1(id){
       var val1=document.getElementById(id).value;
       if(val1==''){
         var final_val=0;
       }else{
         var final_val=document.getElementById(id).value;
       }
       var tadd=parseInt(final_val)+1;
       document.getElementById(id).value=tadd;
     }      
</script>
